                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/questionThreeAnswerTwo" />


            <RadioButton
                android:id="@+id/questionThreeAnswerThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/questionThreeAnswerThree" />

            <RadioButton
                android:id="@+id/questionThreeAnswerFour"
                android:layout_width="wrap_content"
