        <RadioGroup
            android:id="@+id/questionFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/questionFourAnswerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/questionFourAnswerOne" />

            <RadioButton
                android:id="@+id/questionFourAnswerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/questionFourAnswerTwo" />


            <RadioButton
                android:id="@+id/questionFourAnswerThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/questionFourAnswerThree" />

            <RadioButton
                android:id="@+id/questionFourAnswerFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/questionFourAnswerFour" />

        </RadioGroup>

        <!--Question five-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="#FF71AB1F"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/questionFive"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <RadioGroup
            android:id="@+id/questionFive"
            android:layout_width="match_parent"
